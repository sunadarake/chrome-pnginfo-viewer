{
    "manifest_version": 3,
    "name": "PNGinfo Viewer",
    "version": "1.0",
    "description": "画像のPNGInfoを閲覧するためのChrome拡張機能",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "",
        "default_title": "PNGinfo Viewer"
    },
        "icons": {
          "16": "icons/icon16.png",
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        },
        
    "web_accessible_resources": [
        {
            "resources": [
                "edit.html",
                "edit.js",
                "edit.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}